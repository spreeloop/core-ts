{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "compileOnSave": true,
  "include": ["src",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
